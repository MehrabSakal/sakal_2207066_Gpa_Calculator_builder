<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.55" orientation="VERTICAL" prefHeight="650.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sakal_2207066_gpa_calculator_builder.HelloController">
    <items>
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <children>
                <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                    <children>
                        <Label text="Academic Performance Report" textFill="#2c3e50">
                            <font>
                                <Font name="Segoe UI Bold" size="22.0" />
                            </font>
                        </Label>

                        <HBox spacing="15.0" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" minWidth="180.0" prefWidth="180.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10;">
                                    <children>
                                        <Label text="FINAL CGPA" textFill="#7f8c8d">
                                            <font>
                                                <Font name="Segoe UI" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="gpaLabel" text="3.85" textFill="#28ad3a">
                                            <font>
                                                <Font name="Segoe UI Bold" size="48.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="totalCreditsLabel" text="Total Credits: 0" textFill="#7f8c8d">
                                            <font>
                                                <Font size="12.0" />
                                            </font>
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </Label>
                                    </children>
                                    <effect>
                                        <DropShadow color="#0000001a" offsetY="2.0" radius="5.0" />
                                    </effect>
                                </VBox>

                                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10;" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Course Breakdown" textFill="#7f8c8d">
                                            <font>
                                                <Font name="Segoe UI Bold" size="12.0" />
                                            </font>
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" top="10.0" />
                                            </VBox.margin>
                                        </Label>

                                        <TableView fx:id="summaryTable" style="-fx-background-color: transparent; -fx-base: white;" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="sumColName" text="Course Name" />
                                                <TableColumn fx:id="sumColCode" maxWidth="100.0" minWidth="80.0" text="Code" />
                                                <TableColumn fx:id="sumColGrade" maxWidth="80.0" minWidth="60.0" style="-fx-alignment: CENTER;" text="Grade" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                    <effect>
                                        <DropShadow color="#00000014" offsetY="1.0" radius="3.0" />
                                    </effect>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8;">
                            <children>
                                <VBox spacing="2.0">
                                    <children>
                                        <Label text="Student Name" textFill="#95a5a6"><font><Font size="10.0" /></font></Label>
                                        <TextField fx:id="studentNameInput" prefWidth="200.0" promptText="Name" style="-fx-background-radius: 4; -fx-border-color: #bdc3c7;" />
                                    </children>
                                </VBox>
                                <VBox spacing="2.0">
                                    <children>
                                        <Label text="GPA (Edit)" textFill="#95a5a6"><font><Font size="10.0" /></font></Label>
                                        <TextField fx:id="studentGpaInput" prefWidth="80.0" promptText="0.00" style="-fx-background-radius: 4; -fx-border-color: #bdc3c7;" />
                                    </children>
                                </VBox>

                                <Button mnemonicParsing="false" onAction="#onSaveToDB" prefHeight="30.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="SAVE RECORD">
                                    <HBox.margin><Insets left="10.0" top="15.0" /></HBox.margin>
                                    <effect><DropShadow color="#00000026" offsetY="2.0" /></effect>
                                </Button>
                                <AnchorPane HBox.hgrow="ALWAYS" />
                                <Button fx:id="restartButton" mnemonicParsing="false" onAction="#onRestartClick" prefHeight="30.0" style="-fx-background-color: transparent; -fx-border-color: #e74c3c; -fx-text-fill: #e74c3c;" text="Reset Calculation">
                                    <HBox.margin><Insets top="15.0" /></HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0">
            <children>
                <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <Label text="Database Records" textFill="#34495e"><font><Font name="Segoe UI Bold" size="14.0" /></font></Label>
                        <TableView fx:id="dbTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDbId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colDbName" prefWidth="200.0" text="Student Name" />
                                <TableColumn fx:id="colDbGpa" prefWidth="100.0" text="CGPA" />
                                <TableColumn fx:id="colDbDate" prefWidth="150.0" text="Date Added" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Label text="Select a row to edit above or delete:" textFill="#95a5a6" />
                                <Button mnemonicParsing="false" onAction="#onUpdateDbClick" style="-fx-background-color: #f1c40f; -fx-text-fill: white;" text="Update Selected" />
                                <Button mnemonicParsing="false" onAction="#onDeleteDbClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </items>
</SplitPane>
