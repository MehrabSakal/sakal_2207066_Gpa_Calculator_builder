<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sakal_2207066_gpa_calculator_builder.HelloController">
    <TextField fx:id="courseNameField" layoutX="14.0" layoutY="40.0" prefHeight="26.0" prefWidth="140.0"
               promptText="Course Name"/>
    <TextField fx:id="courseCodeField" layoutX="160.0" layoutY="40.0" prefHeight="26.0" prefWidth="100.0"
               promptText="Course Code"/>
    <TextField fx:id="creditField" layoutX="270.0" layoutY="40.0" prefHeight="26.0" prefWidth="60.0"
               promptText="Credit"/>
    <TextField fx:id="teacher1Field" layoutX="340.0" layoutY="40.0" prefHeight="26.0" prefWidth="120.0"
               promptText="Teacher 1"/>
    <TextField fx:id="teacher2Field" layoutX="470.0" layoutY="40.0" prefHeight="26.0" prefWidth="120.0"
               promptText="Teacher 2"/>
    <TextField fx:id="gradeField" layoutX="600.0" layoutY="40.0" prefHeight="26.0" prefWidth="80.0"
               promptText="Grade (A, B+...)"/>

    <Button fx:id="addCourseButton" layoutX="690.0" layoutY="40.0" mnemonicParsing="false" onAction="#OnAddCourseClick"
            prefHeight="26.0" prefWidth="80.0" text="ADD"/>
    <TableView fx:id="courseTable" layoutX="14.0" layoutY="90.0" prefHeight="320.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colName" prefWidth="180.0" text="Course Name"/>
            <TableColumn fx:id="colCode" prefWidth="100.0" text="Code"/>
            <TableColumn fx:id="colCredit" prefWidth="60.0" text="Credit"/>
            <TableColumn fx:id="colTeacher1" prefWidth="150.0" text="Teacher 1"/>
            <TableColumn fx:id="colTeacher2" prefWidth="150.0" text="Teacher 2"/>
            <TableColumn fx:id="colGrade" prefWidth="120.0" text="Grade"/>
        </columns>
    </TableView>

    <Button fx:id="calculateid" layoutX="260.0" layoutY="430.0" mnemonicParsing="false"
            onAction="#OnCalculateButtonClick" prefHeight="34.0" prefWidth="280.0" text="CALCULATE"/>
    <Label layoutX="14.0" layoutY="470.0" text="Total Credits entered:">
        <font/>
    </Label>
    <Label fx:id="currentCreditLabel" layoutX="150.0" layoutY="470.0" text="0"/>

</AnchorPane>
